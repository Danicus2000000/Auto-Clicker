<Window x:Class="AutoClicker_Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoClicker_Interface"
        mc:Ignorable="d"
        Title="AutoClicker" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="startStop_btn" Content="Start" HorizontalAlignment="Left" Margin="560,349,0,0" VerticalAlignment="Top" Height="38" Width="155" Click="startStop_btn_Click"/>
        <Label x:Name="timeDelay_lbl" Content="Time between clicks in milliseconds:" HorizontalAlignment="Left" Margin="62,48,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="timeDelay_txt" HorizontalAlignment="Left" Margin="266,52,0,0" TextWrapping="Wrap" Text="625" VerticalAlignment="Top" Width="134" Height="22" PreviewTextInput="timeDelay_txt_PreviewTextInput"/>
        <ComboBox x:Name="clickCount_cmb" HorizontalAlignment="Left" Margin="266,74,0,0" VerticalAlignment="Top" Width="134" SelectedIndex="0">
            <ComboBoxItem Content="Single Click"/>
            <ComboBoxItem Content="Double Click"/>
        </ComboBox>

    </Grid>
</Window>
